<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:orientation="vertical">
    <TextView android:id="@+id/sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sesion"
        android:textSize="12sp"
        android:layout_gravity="center"
        />

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/pfaltah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Profesor falta"
            android:textSize="12sp"
            android:layout_weight="0.8"
            android:layout_gravity="left"

            />

        <TextView android:id="@+id/pcubreh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Profesor cubre"
            android:textSize="12sp"
            android:layout_weight="0.6"
            android:layout_gravity="center"


            />

        <TextView android:id="@+id/asignaturah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Asignatura"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_gravity="right"


            android:layout_marginRight="6dp" />
    </LinearLayout>


    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
	<TextView android:id="@+id/pfalta"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textStyle="normal"
		android:textSize="12sp"
        android:layout_weight="1.8"
        android:layout_gravity="left"
        />

	<TextView android:id="@+id/pcubre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="normal" 
		android:textSize="12sp"
        android:layout_weight="1.8"
        android:layout_gravity="center"

        />
    <TextView android:id="@+id/asignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_weight="0.4"
        android:layout_gravity="right"

        />
    </LinearLayout>

</LinearLayout>
